<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ActividadAMSemana9" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios de la app -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Estado de la barra superior transparente o color de status -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <!-- Fondo y texto en modo claro -->
        <!-- Para que tus layouts tomen este fondo, usar ?android:attr/colorBackground -->
        <item name="android:colorBackground">@color/background_light</item>
        <!-- Color de texto principal en la UI -->
        <item name="android:textColorPrimary">@color/text_light</item>
        <!-- Opcional: background de ventana -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>
</resources>

